<!-- HANDLES THE BOX TO ENTER NEW RESOURCES -->
<!-- <form id="submitNew" method="POST" action="/submit"> -->
<form class="submitNew" method="POST" action="/submit">
    <div class="form-group">
        <label for="resourceURL">Source Link</label>
        <div class="input-group">
            <!-- below is the hidden user id (value) which will allow us to do req.body.user_id -->
            <input type="hidden" id="user" name="user" value="<%= id %>">
            <input type="text" class="form-control" name="resourceURL" placeholder="Enter your URL"/>
        </div>
    </div>

    <div class="form-group">
        <label for="title">Title</label>
        <div class="input-group">
            <input type="text" class="form-control" name="title" placeholder="Enter your Title"/>
        </div>
    </div>

    <div class="form-group">
        <label for="category">Image URL</label>
        <div class="input-group">
            <input type="text" class="form-control" name="imageURL" placeholder="Enter an image"/>
        </div>
    </div>
    <div class="form-group">
        <label for="confirm">Description</label>
        <div class="input-group">
            <input type="text" class="form-control" name="description" placeholder="Add a short description"/>
        </div>
    </div>
    <button type="submit">SUBMIT</button>
</form>
